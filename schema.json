{
  "type": "datasource",
  "metadata": {},
  "schema": {
    "docs": "https://docs.budibase.com",
    "friendlyName": "Azure Storage Tables",
    "type": "Non-Relational",
    "description": "Connects to the Azure Storage Tables",
    "datasource": {
      "accountName": {
        "type": "string",
        "required": true,
        "display": "Account Name"
      },
      "key": {
        "type": "string",
        "required": true,
        "display": "Account Key"
      },
      "endpoint": {
        "type": "password",
        "required": true,
        "display": "Endpoint"
      },
      "database": {
        "type": "string",
        "required": true,
        "display": "Database Name"
      }
    },
    "query": {
      "create": {
        "type": "json"
      },
      "read": {
        "type": "fields",
        "fields": {
          "partitionKey": {
            "display": "Partition Key",
            "type": "string",
            "required": false
          },
          "rowKey": {
            "display": "Row Key",
            "type": "string",
            "required": false
          }
        }
      },
      "update": {
        "type": "json"
      },
      "delete": {
        "type": "fields",
        "fields": {
          "id": {
            "type": "json",
            "required": true
          }
        }
      },
      "deleteTable": {}
    }
  }
}
